<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= title %> </h1>
</div>
<div class="box">
    <% items.forEach((item) => {%>
    <div class="item">
        <form action="/delete-item" method="POST">
            <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%=item._id%> ">
            <input type="hidden" name="isCustom" value="<%=isCustom%>"></input>
            <button type="hidden" name="list" value="<%=title%>"></button>
        </form>
        <p><%= item.name  %></p>
    </div>

    <% })%>

    <form class="item" action="/new-item" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required autofocus>
        <input type="hidden" name="hidden" value="<%=isCustom%>"></input>
        <button type="submit" name="list" value="<%=title%>">+</button>
    </form>
</div>

<%- include ("footer") -%>